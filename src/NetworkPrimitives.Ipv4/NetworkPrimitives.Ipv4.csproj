<Project Sdk="Microsoft.NET.Sdk">


  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>NetworkPrimitives.Ipv4</Title>
    <PackageTags>network; networking; subnet; ip-address; ipaddress; ip address;</PackageTags>
    <Description>Lightweight package for working with IPv4 addresses, ranges, and subnets.</Description>
  </PropertyGroup>


  <ItemGroup>
    <ProjectReference Include="..\NetworkPrimitives.Common\NetworkPrimitives.Common.csproj" />
  </ItemGroup>


  <ItemGroup>
    <AdditionalFiles Include="PublicAPI/$(TargetFramework)/PublicAPI.Shipped.txt" />
    <AdditionalFiles Include="PublicAPI/$(TargetFramework)/PublicAPI.Unshipped.txt" />
  </ItemGroup>


  <ItemGroup>
    <Compile Update="Ipv4AddressRange.RefStructEnumerator.cs">
      <DependentUpon>Ipv4AddressRange.cs</DependentUpon>
    </Compile>
    <Compile Update="Ipv4AddressRange.ClassEnumerator.cs">
      <DependentUpon>Ipv4AddressRange.cs</DependentUpon>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <Folder Include="Extensions" />
  </ItemGroup>
</Project>
